<section id="banner">
  <div class="inner">
    <div class="logo"><span class="icon fa-gem"></span></div>
    <h2>Equipo Freelance 2DAW</h2>
    <p>Desarrollo Full Stack: Node.js, MySQL & Handlebars</p>
  </div>
</section>

<section id="wrapper">

  {{#each miembros}}
  <section id="{{id_html}}" class="{{clase_html}}">
    <div class="inner">
      <a href="/{{nombre}}" class="image">
        <img src="{{#if foto_url}}{{foto_url}}{{else}}/images/pic01.jpg{{/if}}" alt="{{nombre}}" />
      </a>
      <div class="content">
        <h2 class="major">{{nombre}} {{apellido1}} {{apellido2}}</h2>
        <p>{{titulo_academico}}</p>
        <p>{{descripcion}}</p>
        <a href="/{{nombre}}" class="special">Ver Perfil</a>
      </div>
    </div>
  </section>
  {{else}}
  <section class="wrapper">
    <div class="inner">
      <p>Cargando equipo...</p>
    </div>
  </section>
  {{/each}}


  <!-- Trabajos grupales -->
  <section id="four" class="wrapper alt style1">
    <div class="inner">
      <h2 class="major">Trabajos del Equipo</h2>
      <p>Proyectos desarrollados conjuntamente aplicando metodologías ágiles.</p>

      <section class="features">
        {{#each trabajos}}
        <article>
          <a href="#" class="image">
            <img src="{{#if imagen_url}}{{imagen_url}}{{else}}/images/pic04.jpg{{/if}}" alt="" />
          </a>

          <h3 class="major">{{titulo}}</h3>
          <p>{{descripcion}}</p>

          <p><strong>Cliente:</strong> {{cliente}}<br>
            <small>Tecnologías: {{tecnologias_texto}}</small>
          </p>

          <a href="#" class="special">Ver Proyecto</a>
        </article>
        {{else}}
        <p>Aún no hemos subido trabajos grupales.</p>
        {{/each}}
      </section>

      <ul class="actions">
        <li><a href="#" class="button">Ver Portfolio Completo</a></li>
      </ul>
    </div>
  </section>

</section>